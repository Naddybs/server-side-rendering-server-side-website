<%- include('./partials/head') %> 


<section class="intro">

    <article class="intro-banner">
        <h1>Bewaarde huizen</h1>
        <img src="/assets/Funda-Illustratie.png" alt="Huis illustratie">
             <h2>Welkom bij Funda. Hier vind je een overzicht van de huizen die je hebt bewaard.</h2>
    </article>
</section>

  <section class="lijsten">
    <article>
    <h2>Lijsten</h2>
    <p>Maak een nieuwe lijst aan of kies een bestaande lijst om je bewaarde huizen te organiseren.</p>
    <form type="submit">
        <input type="text" placeholder="Nieuwe lijst">
        <button>Maak lijst aan</button>
    </article>

    <div>
    <a href="#">Algemeen bewaarde huizen</a>
    <a id="list-item" href="#">Lijst naam 1</a>
    <a id="list-item" href="#">Lijst naam 2</a>
    <a id="list-item" href="#">Lijst naam 3</a>
    </div>
    

</section>   

<section class="bewaarde-huizen">
<h2> Algemeen bewaarde huizen</h2>
<main class="houses">
    <% houses.forEach(function(house) { %>
        <section class="house">
        <img src="https://fdnd-agency.directus.app/assets/<%= house.poster_image %>">
        <article>

            <div class="house-info">
                <div class="house-heading">
                    <h3><%= house.street %></h3>
                    <h3><%= house.house_nr %></h3>
                    <h3><%= house.nr_addition %></h3>
                </div>
                <div class="house-location">
                    <p><%= house.postal_code %></p>
                    <p><%= house.city %></p>
                </div>
                
                <p id="price">â‚¬<%= house.price %></p>
            <div class="house-details">
                <p><%= house.m2 %></p>
                <p><%= house.rooms %></p>
            </div>
        </article>
        </section>
    <% }) %>       
</main>
</section>
</body>
</html>